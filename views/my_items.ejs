<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

  <title>MY_ITEMS</title>
</head>


<body>
  <%- include('partials/_header') %>
    <div class="card-deck">
      <% for (const item of items) { %>
        <div class="card">
          <img class="card-img-top" src="<%= item.imageurl %>" alt="<%= item.name %>">
          <div class="card-body">
            <h5 class="card-title">
              <%= item.name %>
            </h5>
            <p class="card-text"><small class="text-muted">
                <%= item.price / 100 %>
              </small></p>

                <% if (item.sold) {%>
                  <h5 class="card-title">Sold</h5>
                <% } else { %>
                  <h5 class="card-title"></h5>
                <% } %>

            <form action="/items/<%= item.id %>/delete" method="POST">
              <button type="submit" class="btn btn-primary">Delete</button>
            </form>
            <form action="/items/<%= item.id %>/sold" method="POST">
              <button type="submit" class="btn btn-primary">Sold</button>
            </form>
          </div>
        </div>
        <% } %>
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Min Price" aria-label="Search">
            <input class="form-control mr-sm-2" type="search" placeholder="Mix Price" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
    </div>



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"></script>
</body>

</html>
